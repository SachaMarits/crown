{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/index.ts", "src/riotApi.ts", "src/utils.ts", "src/types.ts"],
  "exclude": ["node_modules", "dist", "src/components", "src/App.tsx", "src/main.tsx", "src/index.css", "src/data"]
}
